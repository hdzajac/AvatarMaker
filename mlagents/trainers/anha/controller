from mlagents.trainers.learn import SingleRun

# todo: Think of multiple runs at once
class Controller(object):
    def __init__(self, sub_id: int, run_speed: int, run_options, process_queue, single_runner: SingleRun):
        self.single_runner = single_runner
        self.sub_id = sub_id
        self.run_speed = run_speed
        self.run_options = run_options
        self.precess_queue = process_queue
        return

    def start(self):
        self.run_options["run_id"] += ("_" + i)
        self.single_runner.run_training(self.sub_id, self.run_speed, self.run_options, self.precess_queue)

